<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_blue_borders">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Player 1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:src="@drawable/close"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="35sp"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_blue_borders">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="Player 2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:src="@drawable/zero"></ImageView>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@drawable/rounded_start_button"
        android:layout_marginBottom="50sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="10sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="10sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="5sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp"
                android:layout_marginBottom="10sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="10sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp">
            </ImageView>
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="10sp"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:background="@drawable/round_back_dark_blue"
                android:padding="20sp"
                android:layout_marginBottom="10sp"
                >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>